
<div class="row">


<h2 class="">Listes des Prospects</h2>

      
      <div class="portlet portlet-default">

        <div class="portlet-header">
          <h4 class="portlet-title">
            <u>Actuellement <%= Prospect.includes(:ficheprospect).where( :ficheprospects => { :prospect_id => nil } ).count %> prospect non qualifi&eacute;</u>
          </h4>
        </div> <!-- /.portlet-header -->

        <div class="portlet-body">
<table id="prospects" class="table table-striped table-bordered table-hover ui-datatable">
  <thead>
    <tr>
      <th>Date</th>
      <th>Code postal</th>
      <th>Ville</th>
      <th>Genre</th>
      <th>Nom</th>
      <th>Pr&eacute;nom</th>
      <th>Age</th>
      <th>Prospection</th>	
      <th>Action</th>
    </tr>
  </thead>

  <tbody>
    <% @prospects.each do |prospect| %>
      <tr>
        <td><%= prospect.date %></td>
        <td><%= prospect.codepostal %></td>
        <td><%= prospect.ville %></td>
        <td><%= prospect.genre %></td>
        <td><%= prospect.nom %></td>
        <td><%= prospect.prenom %></td>
        <td><%= prospect.agemoyen %></td>
	<td><%= prospect.tel1prospection %></td>	
        <td width="100px">
	    
	    <%= link_to prospect, class: "btn btn-xs btn-secondary label" do %>
  	    <i class="fa fa-times"></i>
            <% end %>
	    &nbsp;	
	    <%= link_to edit_prospect_path(prospect), class: "btn btn-xs btn-warning label" do %>
  	    <i class="fa fa-pencil"></i>
            <% end %>
            &nbsp;
	    <%= link_to prospect, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-xs btn-primary label" do %>
  	    <i class="fa fa-trash-o"></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
	
          
        </div> <!-- /.portlet-body -->

      </div> <!-- /.portlet -->

    </div> <!-- /.row -->

<%= link_to 'Cr&eacute;er un prospect manuellement'.html_safe, new_prospect_path, class: 'btn btn-secondary btn-lg btn-block' %>


