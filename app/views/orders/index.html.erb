<p id="notice"><%= notice %></p>

<h1>Listing Orders</h1>


<table>
  <thead>
    <tr>
      <th>Order No</th>
      <th>Subtotal</th>
      <th>Tax</th>
      <th>Shipping</th>
      <th>Total</th>
      <th>Order Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @orders.each do |order| %>
      <tr>
        <td><%= order.id %></td>
        <td><%= number_to_currency order.subtotal %></td>
        <td><%= number_to_currency order.tax %></td>
        <td><%= number_to_currency order.shipping %></td>
        <td><%= number_to_currency order.total %></td>
        <td><%= order.status.humanize %></td>
        <td><%= link_to 'Show', prospect_order_path(@prospect, order) %></td>
        <td><%= link_to 'Edit', edit_prospect_order_path(@prospect, order) %></td>
        <td><%= link_to 'Destroy', [@prospect, order], method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

