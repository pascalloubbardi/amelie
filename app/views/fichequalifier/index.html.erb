<div class="row">


<h2 class="">Listes des fiches Prospects qualifi&eacute;</h2>

      
      <div class="portlet portlet-default">

        <div class="portlet-header">
          <h4 class="portlet-title">
            <u>Actuellement <%= Ficheprospect.all.count %> fiches prospect qualifi&eacute;</u>
          </h4>
        </div> <!-- /.portlet-header -->

        <div class="portlet-body">

<table id="prospects" class="table table-striped table-bordered table-hover ui-datatable">
<thead>
    <tr>
      <th>Date de cr&eacute;ation</th>
      <th>Prospect</th>		
      <th>Consomation</th>
      <th>Age</th>	 	
      <th>Prospection</th>
      <th>Action</th>	
    </tr>
  </thead>

  <tbody>
<% @ficheprospect.each do |ficheprospect| %>
  
      <tr>
        <td><%= ficheprospect.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= @prospect.find_by_id(ficheprospect.prospect_id).nom.upcase %><%= @prospect.find_by_id(ficheprospect.prospect_id).prenom %></td>
        <td width="100px" align="center"><% if ficheprospect.consomationcomplement == true %><i class="fa fa-check-circle-o text-success" style="font-size:30px"></i><% else %><i class="fa fa-times-circle-o text-danger" style="font-size:30px"></i><% end %></td>
	<td><%= ficheprospect.age %></td>
	<td><%= @prospect.find_by_id(ficheprospect.prospect_id).tel1prospection %></td>
        <td width="100px">
	    <%= link_to prospect_path(ficheprospect.prospect_id, ficheprospect), :class => "btn btn-sm btn-secondary" do %>
  	    Prospect &nbsp;<i class="fa fa-arrow-right"></i> 
            <% end %>
        </td>
      </tr>
      
    <% end %>
  </tbody>
</table>

     
        </div> <!-- /.portlet-body -->

      </div> <!-- /.portlet -->

      <%= link_to 'Liste des prospects', prospects_path, class: 'btn btn-secondary btn-lg btn-block' %>

    </div> <!-- /.row -->


