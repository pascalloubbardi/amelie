 <table id="prospects" class="table table-striped table-bordered table-hover ui-datatable">
<thead>
    <tr>
      <th>Date de cr&eacute;ation</th>
      <th>Prospect</th>		
      <th>Consomation</th>
      <th>Age</th>	 	
      <th>Prospection</th>
      <th>Action</th>	
    </tr>
  </thead>

  <tbody>
<% @ficheprospect.each do |ficheprospect| %>
  
      <tr>
        <td><%= ficheprospect.created_at.strftime("%d/%m/%Y") %></td>
        <td><%= @prospect.find_by_id(ficheprospect.prospect_id).nom %><%= @prospect.find_by_id(ficheprospect.prospect_id).prenom %></td>
        <td><% if ficheprospect.consomationcomplement == true %>oui<% else %>non<% end %></td>
	<td><%= @prospect.find_by_id(ficheprospect.prospect_id).agemoyen %></td>
	<td><%= @prospect.find_by_id(ficheprospect.prospect_id).tel1prospection %></td>
        <td width="100px">
	    <%= link_to prospect_ficheprospect_path(ficheprospect.prospect_id, ficheprospect), :class => "btn btn-sm btn-secondary" do %>
  	    <i class="fa fa-arrow-right"></i> Fiche prospect
            <% end %>
        </td>
      </tr>
      
    <% end %>
  </tbody>
</table>

