<div class="row">


<h2 class="">Clients</h2>

      
      <div class="portlet portlet-default">

        <div class="portlet-header">
          <h4 class="portlet-title">
            <u>Compter le nb de client qui on passer au moins une commande</u>
          </h4>
        </div> <!-- /.portlet-header -->

        <div class="portlet-body">

<table id="prospects" class="table table-striped table-bordered table-hover ui-datatable">
<thead>
    <tr>
      <th>ID</th>
      <th>Nom</th>		
      <th>Pr&eacute;nom</th>
      <th>Age</th>	 	
      <th>Prospection</th>
      <th>Consomation</th>
      <th>Action</th>	
    </tr>
  </thead>

  <tbody>
<% @client.each do |client| %>
  
      <tr>
        <td><%= client.id %></td>
        <td><%= client.nom %></td>
        <td><%= client.prenom %></td>
	<td><%= client.ficheprospect.age %></td>
        <td width="100px" align="center">
            <% if client.ficheprospect.consomationcomplement == true %>
              <i class="fa fa-check-circle-o text-success" style="font-size:30px"></i><element hidden>true</element hidden>
            <% else %>
              <i class="fa fa-times-circle-o text-danger" style="font-size:30px"></i>
            <% end %>
        </td>
	<td width="100px" align="center" >
            <% if client.tel1prospection == 'oui' %>
              <i class="fa fa-check-circle-o text-success" style="font-size:30px"></i><element hidden>true</element hidden>
            <% else %>
              <i class="fa fa-times-circle-o text-danger" style="font-size:30px"></i>
            <% end %>
        </td>
        <td width="100px">
	    <%= link_to prospect_orders_path(client), data: {no_turbolink: true}, :class => "btn btn-sm btn-secondary" do %>
  	    Prospect &nbsp;<i class="fa fa-arrow-right"></i> 
            <% end %>
        </td>
      </tr>
      
    <% end %>
  </tbody>
</table>

     
        </div> <!-- /.portlet-body -->

      </div> <!-- /.portlet -->

      <%= link_to 'Liste des prospects', prospects_path, class: 'btn btn-secondary btn-lg btn-block' %>

    </div> <!-- /.row -->


