<p id="notice"><%= notice %></p>


<div class="row">


<h2 class="">Listes des Produits</h2>

      
      <div class="portlet portlet-default">

        <div class="portlet-header">
          <h4 class="portlet-title">
            <u>Actuellement XXX produit en stock</u>
          </h4>
        </div> <!-- /.portlet-header -->

        <div class="portlet-body">
<table id="prospects" class="table table-striped table-bordered table-hover ui-datatable">
  <thead>
    <tr>
      <th>Image</th>
      <th>R&eacute;f&eacute;rence</th>
      <th>Nom</th>
      <th>Origine</th>
      <th>Pr&eacute;sentation</th>
      <th>Conditionnement</th>
      <th>Cat&eacutegorie</th>
      <th>Stock</th>
      <th>Action</th>
    </tr>
  </thead>
  <tbody>
    <% @produits.each do |produit| %>
      <tr>
        <td><%= image_tag produit.image.url(:thumb) %></td>
        <td><%= produit.referenceproduit %></td>
        <td><%= produit.nonproduit %></td>
        <td><%= produit.origineproduit %></td>
        <td><%= produit.presentationprod %></td>
        <td><%= produit.conditionnementproduit %></td>
        <td><%= link_to Categoriesproduit.find(produit.categoriesproduit_id).nomcategorie.upcase, categoriesproduit_path(produit.categoriesproduit_id) %></td>
        <td><% if produit.stockprod.nil? %> 0 <% else %><%= produit.stockprod %><% end %></td>	
        <td>
	    
	    <%= link_to produit, class: "btn btn-secondary" do %>
  	    <i class="fa fa-times"></i>
            <% end %>
	    &nbsp;	
	    <%= link_to edit_produit_path(produit), class: "btn btn-warning", style: 'margin:5px 0 5px 0' do %>
  	    <i class="fa fa-pencil"></i>
            <% end %>
            &nbsp;
	    <%= link_to produit, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-primary" do %>
  	    <i class="fa fa-trash-o"></i>
            <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>
	
          
        </div> <!-- /.portlet-body -->

      </div> <!-- /.portlet -->

    </div> <!-- /.row -->

<%= link_to 'Ajouter une r&eacute;f&eacuterence produit'.html_safe, new_produit_path, class: 'btn btn-secondary btn-lg btn-block' %>


