      <%= form_for order_item, remote: true do |f| %>
      <h4 class="text-right">Prix unitaire: <span style="color: green"><%= number_to_currency produit.price, unit: "â‚¬", separator: ",", delimiter: "", format: "%n %u"  %></span></h4>
